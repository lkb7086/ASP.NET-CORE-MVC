<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0" />*@
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/menu.css" />
    @*    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">*@
    @*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/VideoManagerWeb.styles.css" asp-append-version="true" />*@
</head>
<body>
    <div class="header">
        <div class="section">
            <div class="logo">
                <a href="/PreviewAlbum/Title">tubaN</a>
                @*<img src="~/data/SubLogo.png" style="width: 100px; height: 40px;">*@
            </div>
            <div class="nav">
                <ul>
                    @if (Context.Session.GetString("MainMenu") == "Preview")
                    {
                        <li><a class="active" href="/PreviewAlbum/Title">시사회</a></li>
                        @if (Context.Session.GetInt32("User") > 0)
                        {
                            <li><a href="/PipelineProject/ProjectInformation">파이프라인</a></li>
                        }
                    }
                    else if (Context.Session.GetString("MainMenu") == "Pipeline")
                    {
                        <li><a href="/PreviewAlbum/Title">시사회</a></li>
                        @if (Context.Session.GetInt32("User") > 0)
                        {
                            <li><a class="active" href="/PipelineProject/ProjectInformation">파이프라인</a></li>
                        }
                    }
                </ul>
            </div>
            <div class="profile">
                <ul>
                    <li><a id ="logout" href="/Account/Logout">로그아웃</a></li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()

    @*    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>